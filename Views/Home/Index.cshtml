@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<div class="hero-section position-relative">
    <img src="/images/Header.jpg" alt="Header Image" class="hero-image">
    <div class="hero-overlay"></div>
    <div class="hero-content text-center text-white">
        <h1>Welcome to F.R.I.E.N.D.S</h1>
        <p>Keep your Friends organized and cherished forever!</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg">Get Started</a>
    </div>
</div>
 

<div class="features-section py-5">
    <div class="container">
        <h2 class="text-center mb-5">Why Use F.R.I.E.N.D.S?</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="icon-container mb-3">
                    <i class="bi bi-people-fill" style="font-size: 3rem; color: #007bff;"></i>
                </div>
                <h4>Organize Your Friends</h4>
                <p>Group your friends into categories like College, Work, or Best Friends.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="icon-container mb-3">
                    <i class="bi bi-telephone-fill" style="font-size: 3rem; color: #28a745;"></i>
                </div>
                <h4>Stay Connected</h4>
                <p>Keep important details like where you first met, contact info, and more.</p>
            </div>
            <div class="col-md-4 text-center">
                <div class="icon-container mb-3">
                    <i class="bi bi-ui-checks" style="font-size: 3rem; color: #ffc107;"></i>
                </div>
                <h4>Simple and Intuitive</h4>
                <p>Our user-friendly design makes managing your friendships effortless.</p>
            </div>
        </div>
    </div>
</div>

<div class="call-to-action-section text-center">
    <h2>Ready to Get Started?</h2>
    <p>Join F.R.I.E.N.D.S today and cherish your friendships forever!</p>
    <a href="/Account/Register" class="btn btn-success btn-lg">Create an Account</a>
</div>

